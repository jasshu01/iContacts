<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactInfo">

    <TextView
        android:id="@+id/infoTextview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/contactInfoPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/person" />

    <TextView
        android:id="@+id/infoTextview2"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTextview1" />

    <TextView
        android:id="@+id/infoTextview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message2"
        app:layout_constraintVertical_bias="0.511" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="303dp"
        android:layout_height="67dp"
        android:layout_marginBottom="52dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/deleteContact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/deletecontact" />

        <ImageView
            android:id="@+id/shareContact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sharecontact" />

        <ImageView
            android:id="@+id/editContact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/editcontact" />
    </LinearLayout>

    <ImageView
        android:id="@+id/call1"
        android:layout_width="40dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/message1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/call" />

    <ImageView
        android:id="@+id/message2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toEndOf="@+id/call2"
        app:layout_constraintTop_toBottomOf="@+id/message1"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/call2"
        android:layout_width="40dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/message2"
        app:layout_constraintEnd_toEndOf="@+id/call1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/call1"
        app:layout_constraintTop_toTopOf="@+id/message2"
        app:layout_constraintVertical_bias="0.481"
        app:srcCompat="@drawable/call" />

    <TextView
        android:id="@+id/infoTextview3"
        android:layout_width="181dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/call1"
        app:layout_constraintEnd_toStartOf="@+id/call1"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/call1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/infoTextview4"
        android:layout_width="181dp"
        android:layout_height="63dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/call2"
        app:layout_constraintEnd_toStartOf="@+id/call2"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/call2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/message1"
        android:layout_width="37dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toEndOf="@+id/call1"
        app:layout_constraintTop_toBottomOf="@+id/infoTextview2"
        app:srcCompat="@drawable/message" />

    <TextView
        android:id="@+id/contactInfoDisplayText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="A"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

</androidx.constraintlayout.widget.ConstraintLayout>